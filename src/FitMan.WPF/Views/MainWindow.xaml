<Window x:Class="FitMan.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:FitMan.WPF.ViewModels"
        Title="{Binding Title}" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <materialDesign:DialogHost>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <materialDesign:ColorZone Mode="PrimaryMid" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo/Header -->
                    <StackPanel Grid.Row="0" Margin="20">
                        <TextBlock Text="FitMan" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="White"/>
                        <TextBlock Text="Gym Management" 
                                  FontSize="14" 
                                  Foreground="White"
                                  Opacity="0.8"/>
                    </StackPanel>

                    <!-- Navigation Menu -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,20,0,0">
                            <Button Content="Dashboard"
                                   Command="{Binding LoadDashboardCommand}"
                                   Style="{StaticResource MaterialDesignFlatButton}"
                                   Height="50"
                                   HorizontalContentAlignment="Left"
                                   Foreground="White"
                                   Margin="10,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ViewDashboard" 
                                                                    Width="24" 
                                                                    Height="24"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,15,0"/>
                                            <TextBlock Text="Dashboard" 
                                                      VerticalAlignment="Center"
                                                      FontSize="16"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                            <Button Content="Members"
                                   Command="{Binding LoadMembersCommand}"
                                   Style="{StaticResource MaterialDesignFlatButton}"
                                   Height="50"
                                   HorizontalContentAlignment="Left"
                                   Foreground="White"
                                   Margin="10,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                                    Width="24" 
                                                                    Height="24"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,15,0"/>
                                            <TextBlock Text="Members" 
                                                      VerticalAlignment="Center"
                                                      FontSize="16"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                            <Button Content="Check-In"
                                   Command="{Binding LoadCheckInCommand}"
                                   Style="{StaticResource MaterialDesignFlatButton}"
                                   Height="50"
                                   HorizontalContentAlignment="Left"
                                   Foreground="White"
                                   Margin="10,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Login" 
                                                                    Width="24" 
                                                                    Height="24"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,15,0"/>
                                            <TextBlock Text="Check-In" 
                                                      VerticalAlignment="Center"
                                                      FontSize="16"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                            <Button Content="Payments"
                                   Command="{Binding LoadPaymentsCommand}"
                                   Style="{StaticResource MaterialDesignFlatButton}"
                                   Height="50"
                                   HorizontalContentAlignment="Left"
                                   Foreground="White"
                                   Margin="10,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CurrencyUsd" 
                                                                    Width="24" 
                                                                    Height="24"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,15,0"/>
                                            <TextBlock Text="Payments" 
                                                      VerticalAlignment="Center"
                                                      FontSize="16"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- User Info & Logout -->
                    <StackPanel Grid.Row="2" Margin="20">
                        <Separator Background="White" Opacity="0.3" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Account" 
                                                    Width="24" 
                                                    Height="24"
                                                    Foreground="White"
                                                    VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentUserName}" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="10,0,0,0"
                                      FontSize="14"/>
                        </StackPanel>
                        <Button Content="Logout"
                               Command="{Binding LogoutCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Foreground="White"
                               BorderBrush="White"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <ContentControl Content="{Binding CurrentView}"
                              Margin="20"/>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
