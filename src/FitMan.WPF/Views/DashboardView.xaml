<UserControl x:Class="FitMan.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:FitMan.WPF.ViewModels">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ViewDashboard" 
                                            Width="36" 
                                            Height="36"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Dashboard" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Margin="15,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Command="{Binding RefreshCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center"/>
                            <TextBlock Text="Refresh" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>

            <!-- Stats Cards -->
            <UniformGrid Grid.Row="1" Columns="4" Rows="1" Margin="0,0,0,20">
                <!-- Total Members Card -->
                <materialDesign:Card Margin="0,0,10,0" 
                                    Background="{DynamicResource PrimaryHueMidBrush}"
                                    Foreground="White">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <materialDesign:PackIcon Kind="AccountGroup" 
                                               Width="48" 
                                               Height="48"
                                               HorizontalAlignment="Left"
                                               Opacity="0.8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding Stats.TotalMembers, FallbackValue=0}" 
                                  FontSize="42" 
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  Margin="0,10"/>
                        
                        <TextBlock Grid.Row="2" 
                                  Text="Total Members" 
                                  FontSize="14" 
                                  Opacity="0.9"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Active Members Card -->
                <materialDesign:Card Margin="0,0,10,0" 
                                    Background="{DynamicResource SecondaryHueMidBrush}"
                                    Foreground="White">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <materialDesign:PackIcon Kind="AccountCheck" 
                                               Width="48" 
                                               Height="48"
                                               HorizontalAlignment="Left"
                                               Opacity="0.8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding Stats.ActiveMembers, FallbackValue=0}" 
                                  FontSize="42" 
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  Margin="0,10"/>
                        
                        <TextBlock Grid.Row="2" 
                                  Text="Active Members" 
                                  FontSize="14" 
                                  Opacity="0.9"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Today's Check-Ins Card -->
                <materialDesign:Card Margin="0,0,10,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <materialDesign:PackIcon Kind="Login" 
                                               Width="48" 
                                               Height="48"
                                               HorizontalAlignment="Left"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding Stats.TodayCheckIns, FallbackValue=0}" 
                                  FontSize="42" 
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  Margin="0,10"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        
                        <TextBlock Grid.Row="2" 
                                  Text="Today's Check-Ins" 
                                  FontSize="14" 
                                  Opacity="0.6"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Monthly Revenue Card -->
                <materialDesign:Card Margin="0,0,0,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <materialDesign:PackIcon Kind="CurrencyUsd" 
                                               Width="48" 
                                               Height="48"
                                               HorizontalAlignment="Left"
                                               Foreground="Green"/>
                        
                        <TextBlock Grid.Row="1" 
                                  FontSize="42" 
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  Margin="0,10"
                                  Foreground="Green">
                            <Run Text="$"/>
                            <Run Text="{Binding Stats.MonthlyRevenue, FallbackValue=0, StringFormat=N0}"/>
                        </TextBlock>
                        
                        <TextBlock Grid.Row="2" 
                                  Text="Monthly Revenue" 
                                  FontSize="14" 
                                  Opacity="0.6"/>
                    </Grid>
                </materialDesign:Card>
            </UniformGrid>

            <!-- Secondary Stats -->
            <UniformGrid Grid.Row="2" Columns="3" Rows="1" Margin="0,0,0,20">
                <materialDesign:Card Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Active Memberships" 
                                  FontSize="14" 
                                  Opacity="0.7"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Stats.ActiveMembershipsCount, FallbackValue=0}" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Expiring Soon" 
                                  FontSize="14" 
                                  Opacity="0.7"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Stats.ExpiringMembershipsCount, FallbackValue=0}" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="OrangeRed"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="15">
                    <StackPanel>
                        <TextBlock Text="Today's Revenue" 
                                  FontSize="14" 
                                  Opacity="0.7"
                                  Margin="0,0,0,5"/>
                        <TextBlock FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="Green">
                            <Run Text="$"/>
                            <Run Text="{Binding Stats.TodayRevenue, FallbackValue=0, StringFormat=N2}"/>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>
            </UniformGrid>

            <!-- Bottom Section -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Attendance Trend Chart Placeholder -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="7-Day Attendance Trend" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,15"/>
                        
                        <ItemsControl ItemsSource="{Binding AttendanceTrends}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                  Text="{Binding DateLabel}" 
                                                  VerticalAlignment="Center"
                                                  FontWeight="Medium"/>
                                        
                                        <ProgressBar Grid.Column="1" 
                                                    Value="{Binding CheckInCount}" 
                                                    Maximum="50"
                                                    Height="20"
                                                    Margin="10,0"/>
                                        
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding CheckInCount}" 
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"
                                                  FontWeight="Bold"
                                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="No attendance data available" 
                                  Visibility="{Binding AttendanceTrends.Count, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  HorizontalAlignment="Center"
                                  Margin="0,20"
                                  Opacity="0.6"
                                  FontStyle="Italic"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Expiring Memberships List -->
                <materialDesign:Card Grid.Column="1" Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                    Width="24" 
                                                    Height="24"
                                                    Foreground="OrangeRed"
                                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Expiring Memberships" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ExpiringMemberships}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                               BorderThickness="0,0,0,1"
                                               Padding="0,10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" 
                                                          Text="{Binding MemberName}" 
                                                          FontWeight="SemiBold"
                                                          FontSize="14"/>
                                                
                                                <TextBlock Grid.Row="1" 
                                                          Text="{Binding MembershipType}" 
                                                          FontSize="12"
                                                          Opacity="0.7"
                                                          Margin="0,2,0,0"/>
                                                
                                                <StackPanel Grid.Row="2" 
                                                           Orientation="Horizontal" 
                                                           Margin="0,5,0,0">
                                                    <materialDesign:PackIcon Kind="Calendar" 
                                                                           Width="16" 
                                                                           Height="16"
                                                                           VerticalAlignment="Center"/>
                                                    <TextBlock Margin="5,0,0,0"
                                                              VerticalAlignment="Center">
                                                        <Run Text="{Binding DaysRemaining}"/>
                                                        <Run Text="days left"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <TextBlock Text="No memberships expiring soon" 
                                  Visibility="{Binding ExpiringMemberships.Count, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  HorizontalAlignment="Center"
                                  Margin="0,20"
                                  Opacity="0.6"
                                  FontStyle="Italic"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Loading Overlay -->
            <Grid Grid.RowSpan="4" 
                 Background="#80000000"
                 Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="0"
                                IsIndeterminate="True"
                                Width="60"
                                Height="60"/>
                    <TextBlock Text="Loading dashboard..." 
                              Foreground="White"
                              FontSize="16"
                              Margin="0,20,0,0"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
